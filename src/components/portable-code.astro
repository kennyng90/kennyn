---
import CodeBlock from "@/components/code-block.svelte";
import type { Schema } from "@/sanity/types/schema";

interface Props {
  node: {
    _type?: Schema.ACCESSIBLE_IMAGE;
    _key: string;
    code: string;
  };
}

const { code } = Astro.props.node;
---

<div class='relative overflow-x-scroll sm:overflow-hidden'>
  <CodeBlock code={code} client:idle />
</div>
